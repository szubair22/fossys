# OrgMeet Environment Configuration Template
# Copy to .env.dev or .env.prod and update values

# Environment: development | production
APP_ENV=development

# PocketBase API URL (proxied through Nginx)
# In Docker setup, this should always be /api
PB_URL=/api

# Jitsi Meet domain for video conferencing
# Public: meet.jit.si
# Self-hosted: jitsi.yourdomain.com
JITSI_DOMAIN=meet.jit.si

# Site URL
# Development: http://localhost:3000
# Production: https://yourdomain.com
SITE_URL=http://localhost:3000

# Debug mode
DEBUG=true
