# OrgMeet FastAPI Environment Configuration Template
# Copy to .env.fastapi.dev or .env.fastapi.prod and update values

# Environment: development | production
APP_ENV=development

# Debug mode (enables API docs at /api/docs)
DEBUG=true

# JWT Secret Key - CHANGE THIS IN PRODUCTION
SECRET_KEY=your-super-secret-key-change-in-production

# PostgreSQL Database
POSTGRES_USER=orgmeet
POSTGRES_PASSWORD=orgmeet
POSTGRES_DB=orgmeet

# Site URL
# Development: http://localhost:3000
# Production: https://yourdomain.com
SITE_URL=http://localhost:3000

# CORS Origins (JSON array)
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# Jitsi Meet domain for video conferencing
# Public: meet.jit.si
# Self-hosted: jitsi.yourdomain.com
JITSI_DOMAIN=meet.jit.si

# SMTP Configuration (for email notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=465
SMTP_TLS=true
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_SENDER=noreply@yourdomain.com
